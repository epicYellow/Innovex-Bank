<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innovex_Bank.ContentViews.ButtonControl">

    <Button Text="{Binding ButtonText}" BorderColor="{Binding ButtonBorderColor}" x:Name="mainButton" TextColor="{Binding ButtonTextColor}"
            MaximumHeightRequest="40" CornerRadius="3" BackgroundColor="{Binding ButtonBackgroundColor}" BorderWidth="1"/>
    
</ContentView>
