<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:Innovex_Bank.ContentViews"
             x:Class="Innovex_Bank.ContentViews.PageHeader">
    
    <FlexLayout BackgroundColor="White" HeightRequest="65" Direction="Row" AlignContent="Center" AlignItems="Center" JustifyContent="SpaceBetween" Wrap="Wrap">
        <Label VerticalOptions="Center" Margin="15,0,0,0" Text="{Binding PageTitle}" FontAttributes="Bold" TextColor="{DynamicResource Black}" FontSize="Medium"  />
        <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Margin="0,0,15,0">
            <Ellipse VerticalOptions="Center" Fill="{DynamicResource Black}"
                 Aspect="Uniform"
                WidthRequest="40"/>
            <Label VerticalOptions="Center" Text="Reinhardt de Beer" Margin="0,0,30,0" TextColor="{DynamicResource Black}"/>
            <Controls:ButtonControl ButtonText="logOut" ButtonType="Primary"/>
        </HorizontalStackLayout>
    </FlexLayout>
    
</ContentView>
