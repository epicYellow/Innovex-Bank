<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:Innovex_Bank.ContentViews"
             x:Class="Innovex_Bank.ContentViews.AccountManagement.TopSectionViewAccManagement">
    
    <VerticalStackLayout WidthRequest="220" Spacing="10" Margin="0,15,0,0">
        <Label Text="{Binding Title}" TextColor="{DynamicResource Black}" 
               HeightRequest="75" FontAttributes="Bold" FontSize="Medium" />
        <Label Text="Total Clients" TextColor="{DynamicResource LightBlack}"  FontSize="Body"/>
        <Label Text="{Binding Total}" TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium"/>
        <Controls:ButtonControl ButtonText="Manage" ButtonType="Secondary"/>
    </VerticalStackLayout>
</ContentView>
