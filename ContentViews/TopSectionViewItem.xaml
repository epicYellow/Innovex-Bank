<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innovex_Bank.ContentViews.TopSectionViewItem"
             xmlns:local="clr-namespace:Innovex_Bank.ViewModels"
             >
    
    <VerticalStackLayout WidthRequest="220" Spacing="10" Margin="0,15,0,0">
        <Label Text="{Binding Title}" TextColor="{DynamicResource Black}" 
               HeightRequest="75" FontAttributes="Bold" FontSize="Medium" />
        <Label Text="Total Clients" TextColor="{DynamicResource LightBlack}"  FontSize="Body"/>
        <Label Text="{Binding Total}" TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium"/>
        <Button Text="Manage" TextColor="{DynamicResource Black}" MaximumHeightRequest="35" CornerRadius="0" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1"/>
    </VerticalStackLayout>
    
</ContentView>
