<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:Innovex_Bank.ContentViews"
             x:Class="Innovex_Bank.ContentPages.AccountManagement"
             BackgroundColor="{DynamicResource SecondaryWhite}">

    <StackLayout>
        <Controls:PageHeader/>
        
        <FlexLayout Wrap="Wrap" Direction="Row" JustifyContent="SpaceBetween" Margin="40,25,40,20">
            <Controls:TopSectionViewItem />
            <Controls:TopSectionViewItem />
            <Controls:TopSectionViewItem />
            <Controls:TopSectionViewItem />
        </FlexLayout>

        <FlexLayout Wrap="Wrap" HeightRequest="65" Direction="Row" AlignItems="Center" JustifyContent="SpaceBetween" Margin="40,20,40,0">
            <Label Text="All Accounts" FontSize="Medium" FontAttributes="Bold" TextColor="{DynamicResource Black}"/>
            <Controls:SearchBar/>
            <Button Margin="30,0,0,0" Text="Add New Account" TextColor="{DynamicResource TersWhite}" MaximumHeightRequest="40" CornerRadius="0" BackgroundColor="Black" BorderWidth="0"/>
        </FlexLayout>

        <FlexLayout Wrap="Wrap" Margin="40,25,40,20" Direction="Row" JustifyContent="SpaceBetween">
            
            <HorizontalStackLayout BackgroundColor="Red" Margin="0,15,0,0" FlexLayout.AlignSelf="Start" FlexLayout.Basis="50%">
                
            </HorizontalStackLayout>

            <HorizontalStackLayout BackgroundColor="Green" Margin="0,15,0,0" FlexLayout.AlignSelf="Start" FlexLayout.Basis="50%" Spacing="150">
                <Label Text="Hllo"/>
                <Label Text="Hllo"/>
            </HorizontalStackLayout>
            
        </FlexLayout>
    </StackLayout>


</ContentPage>