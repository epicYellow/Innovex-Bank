<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:Innovex_Bank.ContentViews"
             x:Class="Innovex_Bank.ContentPages.AccountManagement"
             BackgroundColor="{DynamicResource SecondaryWhite}">

    <FlexLayout Direction="Column">
        <Controls:PageHeader/>
        <HorizontalStackLayout HorizontalOptions="Fill" Padding="30">
            <VerticalStackLayout HorizontalOptions="StartAndExpand" Spacing="20">
                <Label Text="Total Clients" TextColor="{DynamicResource Black}" FontAttributes="Bold" FontSize="Medium"/>
                <Label Text="Total Clients" TextColor="{DynamicResource LightBlack}"  FontSize="Body"/>
                <Label Text="865" TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium"/>
                <Button Text="Manage" TextColor="{DynamicResource Black}" MaximumHeightRequest="35" CornerRadius="0" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
                <Label Text="Total Clients" TextColor="{DynamicResource Black}" FontAttributes="Bold" FontSize="Medium"/>
                <Label Text="Total Clients" TextColor="{DynamicResource LightBlack}"  FontSize="Body"/>
                <Label Text="865" TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium"/>
                <Button Text="Manage" TextColor="{DynamicResource Black}" MaximumHeightRequest="35" CornerRadius="0" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1"/>
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="20" HorizontalOptions="End">
                <Label Text="Total Clients" TextColor="{DynamicResource Black}" FontAttributes="Bold" FontSize="Medium"/>
                <Label Text="Total Clients" TextColor="{DynamicResource LightBlack}"  FontSize="Body"/>
                <Label Text="865" TextColor="{DynamicResource Primary}" FontAttributes="Bold" FontSize="Medium"/>
                <Button Text="Manage" TextColor="{DynamicResource Black}" MaximumHeightRequest="35" CornerRadius="0" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="1"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        
    </FlexLayout>



</ContentPage>