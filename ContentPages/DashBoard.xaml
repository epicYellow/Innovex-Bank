<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Controls="clr-namespace:Innovex_Bank.ContentViews"
             xmlns:AddControls="clr-namespace:Innovex_Bank.ContentViews.DashBoard"
             x:Class="Innovex_Bank.ContentPages.DashBoard"
             BackgroundColor="{DynamicResource SecondaryWhite}">
    
    <StackLayout  >
        <Controls:PageHeader />
        <FlexLayout HorizontalOptions="Fill" Padding="20" JustifyContent="SpaceBetween" >
            <VerticalStackLayout HorizontalOptions="StartAndExpand" Padding="20" >

                <Label Text="Total Clients" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>
                <Label Text="Total Client description here to come " TextColor="Black" Padding="10"/>
                <Label Text="256" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>

                <Button Text="Manage" WidthRequest="300" HeightRequest="50" BackgroundColor="White" HorizontalOptions="Start" Margin="10" BorderWidth="2" BorderColor="Black" CornerRadius="0" />
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="Center"  Padding="20" >
                <Label Text="Total Admin Staff" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>
                <Label Text="Total Client description here to come " TextColor="Black" Padding="10"/>
                <Label Text="256" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>

                <Button Text="Manage" WidthRequest="300" HeightRequest="50" BackgroundColor="White" HorizontalOptions="Start" Margin="10" BorderWidth="2" BorderColor="Black" CornerRadius="0" />

            </VerticalStackLayout>
            <VerticalStackLayout HorizontalOptions="End"  Padding="20">
                <Label Text="Total Cheque and Savings Accounts" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>
                <Label Text="Total Client description here to come " TextColor="Black" Padding="10"/>
                <Label Text="256" TextColor="Black" FontAttributes="Bold" FontSize="Large"/>

                <Button Text="Manage" WidthRequest="300" HeightRequest="50" BackgroundColor="White" HorizontalOptions="Start" Margin="10" BorderWidth="2" BorderColor="Black" CornerRadius="0" />

            </VerticalStackLayout>
        </FlexLayout>

       

        <FlexLayout HorizontalOptions="Fill">
            
            <VerticalStackLayout  WidthRequest="700">
                <Label Text="User OverView" TextColor="Black" FontSize="Large" FontAttributes="Bold" Margin="25, 0, 0, 0"/>

                <AddControls:UserCard></AddControls:UserCard>
                <AddControls:UserCard></AddControls:UserCard>

            </VerticalStackLayout>
            
         
            <VerticalStackLayout  WidthRequest="800">
                <Label Text="Funds" TextColor="Black" FontSize="Large" FontAttributes="Bold" Margin="25, 0, 0, 0"/>
                <Label Text="Funds pool description" TextColor="Black" Margin="25, 20, 0, 0"></Label>

                <VerticalStackLayout >
                    <Label Text="R10 000 000" TextColor="Blue" FontSize="40" Margin="0, 20, 0, 0" FontAttributes="Bold" HorizontalOptions="Center"></Label>
                    <FlexLayout JustifyContent="SpaceBetween" HorizontalOptions="Center" Margin="0, 20, 0, 0" WidthRequest="500">
                        <VerticalStackLayout >
                            <Label Text="Total withdrawn" TextColor="Black" HorizontalOptions="Center" />
                            <Label Text="R10 000 000" TextColor="red" FontSize="25" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="18%" TextColor="green" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Total withdrawn" TextColor="Black" HorizontalOptions="Center"/>
                            <Label Text="R10 000 000" TextColor="Green" FontSize="25" FontAttributes="Bold"/>

                        </VerticalStackLayout>
                    </FlexLayout>
                </VerticalStackLayout>
                
                <VerticalStackLayout Margin="0,50,0,0">
                    <Label Text="Recent Transactions" TextColor="Black" FontSize="Large" FontAttributes="Bold"/>

                    <FlexLayout JustifyContent="SpaceBetween" Margin="25,20,25,0">
                        
                        <Label Text="Account Id" TextColor="Black" FontSize="20"/>
                        <Label Text="Client Id" TextColor="Black" FontSize="20"/>
                        <Label Text="Amount" TextColor="Black" FontSize="20"/>
                        <Label Text="TimeStamp" TextColor="Black" FontSize="20"/>

                    </FlexLayout>
                    <VerticalStackLayout>
                        <AddControls:TransactionCard></AddControls:TransactionCard>
                        <AddControls:TransactionCard></AddControls:TransactionCard>
                        <AddControls:TransactionCard></AddControls:TransactionCard>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </VerticalStackLayout>


            
        </FlexLayout>
        
    </StackLayout>
</ContentPage>