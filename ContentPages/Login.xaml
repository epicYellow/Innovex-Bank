<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Innovex_Bank.ContentPages.Login"
             BackgroundColor="white"
             >


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        

        <Image Source="loginback.png" Aspect="Fill"/>
        

        <VerticalStackLayout Grid.Column="1"  VerticalOptions="Center">
            <Label Text="Sign in" FontSize="50" TextColor="Black" Margin="100, 0, 0, 100" FontAttributes="Bold"/>
            <Entry Text="Email username" Margin="150, 0, 150,0" TextColor="Black" />
            <Entry Text="Password" Margin="150, 25, 150, 100" TextColor="Black" IsPassword="True"  />
            <Button Text="Sign in" WidthRequest="400" CornerRadius="2" BackgroundColor="Black" TextColor="white" FontAttributes="Bold" FontSize="Large"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>